generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Flower {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  imageUrl  String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Decoration {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  imageUrl  String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id           Int          @id @default(autoincrement())
  price        Float
  discount     Float        @default(-1) // USE -1 FOR NO DISCOUNT
  category     Category     @relation(fields: [categoryName], references: [name])
  categoryName Categories
  promotion    String?
  imageUrl     String
  flowers      Flower[]
  decorations  Decoration[]
  features     Feature[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

enum Categories {
  CUMPLEANOS
  PAREJAS
  CONDOLENCIAS
  GRADUACION
  DETALLES
  BODAS
  ANIVERSARIOS
}

model Category {
  name      Categories @id
  products  Product[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum Features {
  HOME
  MASVENDIDOS
  OFERTAS
  PROMOCIONES
}

model Feature {
  name      Features  @id
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// USER & AUTH

enum Role {
  ROOT
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
